<Window x:Class="VCore.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2000/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2000/xaml"
        Title="Nhóm 21 - V-CORE Messenger" Height="500" Width="800"
        Background="#F0F2F5">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Background="White" BorderBrush="#DDD" BorderThickness="0,0,1,0">
            <StackPanel Margin="15">
                <TextBlock Text="CẤU HÌNH KẾT NỐI" FontWeight="Bold" Foreground="#1C1E21" Margin="0,0,0,20"/>
                
                <TextBlock Text="Địa chỉ IP Server:"/>
                <TextBox x:Name="txtIp" Text="127.0.0.1" Margin="0,5,0,15" Padding="5"/>

                <TextBlock Text="Cổng (Port):"/>
                <TextBox x:Name="txtPort" Text="8080" Margin="0,5,0,15" Padding="5"/>

                <TextBlock Text="Tên hiển thị:"/>
                <TextBox x:Name="txtUsername" Text="Người dùng" Margin="0,5,0,20" Padding="5"/>

                <Button x:Name="btnConnect" Content="KẾT NỐI NGAY" Click="btnConnect_Click" 
                        Background="#0084FF" Foreground="White" FontWeight="Bold" Height="40" BorderThickness="0"/>
                
                <TextBlock x:Name="lblStatus" Text="Trạng thái: Chưa kết nối" Margin="0,20,0,0" 
                           HorizontalAlignment="Center" Foreground="Gray"/>
            </StackPanel>
        </Border>

        <Grid Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border BorderBrush="#DDD" BorderThickness="1" Background="White" CornerRadius="5">
                <ScrollViewer x:Name="scrollMessages">
                    <ItemsControl x:Name="chatMessages" Margin="10">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#E4E6EB" CornerRadius="10" Padding="10,5" Margin="0,5" HorizontalAlignment="Left" MaxWidth="400">
                                    <TextBlock Text="{Binding}" TextWrapping="Wrap"/>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>

            <Grid Grid.Row="1" Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="80"/>
                </Grid.ColumnDefinitions>
                
                <TextBox x:Name="txtMessage" Padding="10" Height="40" VerticalContentAlignment="Center"
                         KeyDown="txtMessage_KeyDown"/>
                <Button Grid.Column="1" Content="GỬI" Click="btnSend_Click" Margin="5,0,0,0"
                        Background="#0084FF" Foreground="White" BorderThickness="0"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
